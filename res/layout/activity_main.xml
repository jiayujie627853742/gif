<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jiayujie.android_gif.MainActivity$PlaceholderFragment" >

	   <pl.droidsonroids.gif.GifImageView
	       android:id="@+id/gif_view"
	       android:layout_width="match_parent"
	       android:layout_height="300dp"
	       android:layout_alignParentLeft="true"
	       android:layout_alignParentTop="true"
	       android:src="@drawable/bbb" />

   <Button
       android:id="@+id/button1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/gif_view"
       android:layout_below="@+id/gif_view"
       android:layout_marginTop="43dp"
       android:text="播放" />
   
   <Button
       android:id="@+id/button2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/button1"
       android:layout_alignBottom="@+id/button1"
       android:layout_centerHorizontal="true"
       android:text="暂停" />

   <Button
       android:id="@+id/button3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/button2"
       android:layout_alignBottom="@+id/button2"
       android:layout_alignRight="@+id/gif_view"
       android:text="停止" />


</RelativeLayout>
